Bluepill.application("crowbar-webserver") do |app|
  app.process("crowbar-webserver") do |p|
    p.name = "rainbows"
    p.start_command = "rainbows -E production -c rainbows.cfg"
    p.stdout = p.stderr = "/opt/dell/crowbar_framework/log/production.log"
    p.working_dir = "/opt/dell/crowbar_framework"
    p.uid = "crowbar"
    p.gid = "crowbar"
    p.daemonize = true
  end
end
