Rainbows! do
  use :<%= @concurrency_model %>
  client_max_body_size 8 * 1024 * 1024 * 1024
end

timeout 3600
worker_processes 10

listen "<%= @web_host %>:<%= @web_port %>"
user "<%= @user %>", "<%= @group %>"
stderr_path "<%= "#{@logdir}/#{@logname}.out" %>"
stdout_path "<%= "#{@logdir}/#{@logname}.out" %>"

working_directory "<%= @app_location %>"

<% if node[:platform] == "suse" -%>
pid "/var/run/crowbar/crowbar.pid"
<% else -%>
pid "tmp/pids/crowbar.pid"
<% end -%>
