{
  "id": "bc-template-crowbar",
  "description": "Self-referential barclamp enabling other barclamps",
  "attributes": {
    "crowbar": {
      "instances": {
        "deployer": [ "default" ],
        "ipmi": [ "default" ],
        "redhat_install": [ "default" ],
        "ubuntu_install": [ "default" ],
        "provisioner": [ "default" ],
        "network": [ "default" ],
        "ntp": [ "default" ],
        "dns": [ "default" ],
        "nagios": [ "default" ],
        "ganglia": [ "default" ],
        "logging": [ "default" ]
      },
      "realm": "Crowbar - By selecting OK you are agreeing to the License Agreement",
      "web_port": 3000,
      "users": {
        "machine-install": { "password": "machine_password" },
        "crowbar": { "password": "crowbar" }
      }
    },
    "rails": {
      "max_pool_size": 256,
      "environment": "production"
    }
  },
  "deployment": {
    "crowbar": {
      "crowbar-revision": 0,
      "element_states": {
        "crowbar": [ "all" ]
      },
      "elements": {},
      "element_order": [
        [ "crowbar" ]
      ],
      "config": {
        "environment": "crowbar-config-test",
        "mode": "full",
        "transitions": false,
        "transition_list": [ ]
      }
    }
  }
}

