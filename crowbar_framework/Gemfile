gem "app_config", "1.0.2"
# We are not adding any version here because the SLES and Ubuntu chef
# packaging differ for the version, but we need this to load the chef
# gem correctly within the initializer.
gem "chef"
gem "haml", "3.1.6"
gem "hike", "1.2.1"
gem "i18n", "0.4.2"
gem "json", "1.6.1"
