#
# This needs to be in sync with the application.rb. First we activate 
# specific versions for the gems, and afterwards we require all gems. 
# That's the best workaround for the usage of bundler.
#

source "https://rubygems.org"
gem "rails", "4.0.2"

# chef requires json <= 1.7.7 
# rubocop requires json >= 1.7.7
gem "json", "1.7.7"

gem "rack", "~> 1.5.2"
gem "dotenv-rails", "~> 0.9.0"
gem "haml-rails", "~> 0.5.3"
gem "sass-rails", "~> 4.0.1"
gem "jbuilder", "~> 2.0.3"
gem "bcrypt", "~> 3.1.2"
gem "kwalify", "~> 0.7.2"
gem "simple-navigation", "~> 3.11.0"
gem "sqlite3", "~> 1.3.8"
gem "gli", "~> 2.9.0"
gem "cocaine", "~> 0.5.3"
gem "hashie", "~> 2.0.5"
gem "activerecord-session_store", "~> 0.1.0"
gem "chef", "~> 10.30.4"

gem "uglifier", "~> 2.2.1"
gem "therubyracer", "~> 0.12.1"

group :development, :test do
  gem "debugger", "~> 1.6.5"
  gem "rspec-rails", "~> 2.14.1"
end

# We are not adding any version here because the SLES and Ubuntu chef 
# packaging differ for the version, but we need this to load the chef 
# gem correctly within the initializer.
gem "chef"

group :development do
  gem "guard", "~> 2.4.0"
  gem "better_errors", "~> 1.1.0"
  gem "binding_of_caller", "~> 0.7.2"
  gem "meta_request", "~> 0.2.8"
  gem "quiet_assets", "~> 1.0.2"
  gem "pry-rails", "~> 0.3.2"
  gem "brakeman", "~> 2.4.0", require: false
  gem "rubocop", "~> 0.18.1", require: false
end

group :test do
  gem "mocha", "~> 1.0.0"
  gem "webmock", "~> 1.17.3"
  gem "sinatra", "~> 1.4.4"
  gem "cucumber-rails", "~> 1.4.0", require: false
  gem "simplecov", "~> 0.8.2", require: false
end

group :doc do
  gem "sdoc", "~> 0.3.20", require: false
end
