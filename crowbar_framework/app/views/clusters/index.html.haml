.row
  .col-xs-12
    %h1.page-header
      = t(".title")

      .badge{ :title => t(".extended_clusters", :count => @clusters.count) }
        = t(".simple_clusters", :count => @clusters.count)

.row
  .col-xs-12
    %h2
      = t(".clusters")

.row
  .col-xs-12
  - @clusters.sort.each_slice(2) do |cluster_pair|
    .row
    - cluster_pair.each do |element, cluster|
      .col-md-6.col-xs-12
        = render :partial => "dashboard", :locals => { :element => element, :status => ServiceObject.cluster_status(element)}

.row
  = render :partial => "unallocated_nodes"
  = render :partial => "unassigned_nodes"
