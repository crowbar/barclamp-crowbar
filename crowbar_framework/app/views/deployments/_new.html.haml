= form_for :deployment, :remote => false, :url => deployment_create_path(:barclamp_id=>barclamp.id), :html => { :'data-type' => 'html', :'data-method' => 'post', :method => :post, :id => 'create_deployment_form', :class => "formtastic"} do |f|
  %tr{:class => ["deployment", cycle(:odd, :even)]}
    %td
      = hidden_field_tag :barclamp, barclamp.id
      = text_field_tag :name, Barclamp::DEFAULT_DEPLOYMENT_NAME, :size => 15
    %td
      = text_field_tag :description, "#{t 'created_on'} #{l(Time.now) }", :size => 60
    %td
      %input.button{:type => "submit", :value => t('.propose')}