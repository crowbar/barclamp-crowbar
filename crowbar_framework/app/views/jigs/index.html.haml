%h1= t '.title'

%table.data.box
  %thead
    %tr
      %th= t '.name'
      %th= t '.active'
      %th= t '.description'
      %th= t '.client'
      %th= t '.conn'
  %tbody
    - @jigs.each do |j|
      %tr    
        %td= j.name
        %td
          - if j.active
            .led{:id => j.name, :class => 'ready', :style => "float:left", :title=>t('active')}
          - else
            .led{:id => j.name, :class => 'off', :style => "float:left", :title=>t('inactive')}
        %td= j.description
        %td= j.client_name
        %td= j.server