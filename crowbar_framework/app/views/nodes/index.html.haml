%h1= t '.title'

- if @list.length == 0
  %p= t '.no_nodes'
  %p= link_to t('.bootstrap'), bootstrap_path, :class=>'button'
- else
  %table.data.box
    %thead
      %tr
        %th
        %th= t '.name'
        %th= t '.status'
        %th= t '.admin'
        %th= t '.description'
        %th= t '.deployment'
    %tbody
      -@list.each do |n|
        - s = n.state
        - led = NodeRole::STATES[s]
        - if !n.available
          - led = (n.alive ? 'reserved' : 'idle')
        - elsif !n.alive
          - led = 'off'
        %tr
          %td{ :width=>'10px'}
            .led{:class => led, :title=>t(".#{led}")}
          %td
            = link_to n.name, node_path(n.id)
          %td
            = t (n.alive ? ".alive" : ".dead")
            = t (n.available ? ".available" : ".reserved")
            = NodeRole.state_name(s)
          %td
            = t 'yes' if n.admin
          %td= n.description
          %td= link_to n.deployment.name, deployment_path(n.deployment.id), :title=>n.deployment.description
.clear

:javascript

  function update() {
    $.ajaxSetup({ timeout: 1000 });
    location.reload();
  }