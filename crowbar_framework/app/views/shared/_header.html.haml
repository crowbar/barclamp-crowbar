.navbar.navbar-inverse.navbar-fixed-top{ :role => "navigation" }
  .container
    .navbar-header
      - unless @hide_navigation
        %button.navbar-toggle{ "data-toggle" => "collapse", "data-target" => ".navbar-collapse" }
          %span.sr-only
            Navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

      = link_to page_title, root_path, :class => "navbar-brand"

    - unless @hide_navigation
      .collapse.navbar-collapse.navbar-right
        = render_navigation :expand_all => true, :skip_if_empty => true
