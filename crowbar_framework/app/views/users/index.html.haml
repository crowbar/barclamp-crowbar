%h1= t('user.title')
%table.data.box.no-hover
 %thead
  %tr
   %th{:style => "whitespace: nowrap;" }
    %a.toggle.on.with_label{:href => "javascript:void(0)", :id => "form_toggle", :rel => "form_div"}
     - if @user.admin_reset_password == true
      = t("user.reset_password")
     - elsif @user.id.nil?
      = t("user.add_user")
     - else
      = t("user.update_user")
   %th
  %tbody
   %tr.no-hover
    %td
     #form_div
      - if is_edit_mode?
       - if @user.admin_reset_password == true
        = render :partial => 'form_reset_password', :locals => {:user => @user}
       - else 
        = render :partial => 'form', :locals => {:user => @user}
.clear
= form_for :user, :url => delete_users_path, :html => { :'data-type' => 'html', :id => 'delete_users_form'} do |f|
 - if is_edit_mode?
  %p{:style=>'float:right;'}
   %input.button{:type => "submit", :name => "submit", :value => t('user.delete'), :'data-confirm' => t('user.delete_users')}
 .clear
 %table.data.box
  %thead
   %tr
    %th= t('user.username')
    %th= t('user.email')
    %th= t('user.sign_in_count')
    %th= t('user.failed_attempts')
    %th= t('user.last_sign_in_at')
    %th= t('user.last_sign_in_ip')
    -if is_edit_mode?
     %th= t('user.is_admin')
     %th= t('user.select')
     %th= t('user.actions')
   %tbody
    - if @users.count > 0
     - @users.each do |user|
      %tr.node{ :class => cycle(:odd, :even) }
       -if is_edit_mode?
        %td{:nowrap=>"nowrap"}= link_to user.username, edit_user_path(user)
       -else
        %td{:nowrap=>"nowrap"}= user.username
       %td= user.email
       %td= user.sign_in_count
       %td= user.failed_attempts
       %td= user.last_sign_in_at
       %td= user.last_sign_in_ip
       -if is_edit_mode?
        %td= check_box_tag "user:#{user.username}:is_admin",  user.is_admin, checked=user.is_admin?, :disabled=>true
        %td= check_box_tag "users_to_delete[]", user.id 
        %td{:nowrap=>"nowrap"} 
         = link_to t("user.reset_password"), edit_password_path(user), :class=>'link'
         = " | "
         - if (user.access_locked?)
          = link_to t("user.unlock"), unlock_user_path(user.id), :class=>'link', :method => :put
         - else
          = link_to t("user.lock"), lock_user_path(user.id), :class=>'link', :method => :put
    - else
     %tr
      %td{ :colspan=>5 }
       = t 'no_items'
 - if is_edit_mode?
  %p{:style=>'float:left;'}
   %input.button{:type => "submit", :name => "submit", :value => t('user.delete'), :'data-confirm' => t('user.delete_users')}
   

